# Application Settings
APP_NAME="V-Tutor Platform"
DEBUG=True
API_VERSION="v1"

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./vtutor.db
# For PostgreSQL: postgresql://user:password@localhost/vtutor

# OpenAI API
OPENAI_API_KEY=key

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# File Upload
MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR=./uploads

# Vector Store
VECTOR_STORE_DIR=./knowledge_base
